{% extends './layout.twig' %}

{% block meta %}
<meta name="description" content="Learn what your most played songs and artists in Spotify and share with your friends!" />
<meta property="og:image" content="{{ url }}/public/logo.jpg"/>
<meta property="og:title" content="Spotimine" />
<meta property="og:description" content="Learn what your most played songs and artists in Spotify and share with your friends!" />
<meta property="og:url" content="{{ url }}"/>
<link rel="canonical" href="{{ url }}"/>
{% endblock %}

{% block body %}
<div id="intro">
  {% include './video.twig' %}

  <div class="container intro-content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            {% include './logo.twig' %}

            <h1>
              Learn what your most played songs and artists in Spotify and share with your friends!
            </h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
            <a href="/auth/spotify" class="spotify-login">
              Login with Spotify
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% include './copyright.twig' with { atHome: true } %}
{% endblock %}
